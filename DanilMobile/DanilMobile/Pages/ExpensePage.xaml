<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanilMobile.Pages.ExpensePage"
             Visual="Material"
             Title="Новая запись">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Order="Primary" x:Name="btnDel" Text="Del" Clicked="btnDel_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>

            <Picker x:Name="pickRecordType"
                    WidthRequest="100"/>

            <Picker x:Name="pickExpenseType"
                    WidthRequest="100"/>

            <Entry x:Name="etrAmount"
                   Placeholder="Сумма"
                   Text="{Binding Amount}"
                   Keyboard="Numeric"
                   />

            <DatePicker 
                    Date="{Binding Date}" />
            
            <Entry x:Name="etrDescription"
                   Placeholder="Описание"
                   Text="{Binding Description}"
                   />

            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnCancel"
                        Text="Отмена"
                        Clicked="btnCancel_Clicked"/>
                <Button x:Name="btnSave"
                        Text="Сохранить"
                        Clicked="btnSave_Clicked"/>
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>